<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="green.mapper.CalendarMapper">

<select id="selectList" resultType="vo.CalendarVO">
	SELECT * FROM calendar
</select>

<select id="selectDetail" resultType="vo.CalendarVO">
	SELECT * FROM calendar WHERE caid=#{caid}
</select>

<insert id="insertCalendar">
	INSERT INTO calendar VALUES(#{caid}, #{title}, #{start_date}, #{end_date}, #{create_date})
</insert>

<update id="updateCalendar">
	UPDATE calendar SET title=#{title}, start_date=#{start_date}, end_date=#{end_date}, create_date=#{create_date} WHERE caid=#{caid}
</update>

<delete id="deleteCalendar">
	DELETE calendar WHERE caid=#{caid}
</delete>
</mapper>